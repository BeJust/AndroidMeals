<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/mealImage"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        app:srcCompat="@mipmap/wuvryu1468232995" />

    <TextView
        android:id="@+id/mealName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/mealCategory"
        android:layout_alignTop="@+id/mealImage"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/nunito_semibold"
        android:text="TextView"
        android:textColor="#999999"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/mealArea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/mealCategory"
        android:layout_below="@+id/mealCategory"
        android:layout_marginBottom="10dp"
        android:text="TextView"
        android:textColor="#999999"
        android:textSize="10sp"
        tools:fontFamily="@font/nunito" />

    <TextView
        android:id="@+id/mealCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mealName"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="15dp"
        android:layout_toEndOf="@+id/mealImage"
        android:text="TextView"
        android:textColor="#999999"
        android:textSize="10sp"
        tools:fontFamily="@font/nunito" />

    <TextView
        android:id="@+id/mealYoutube"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/mealImage"
        android:layout_alignStart="@+id/mealTags"
        android:layout_marginBottom="15dp"
        android:text="TextView"
        android:textColor="#999999"
        android:textSize="10sp"
        tools:fontFamily="@font/nunito" />

    <TextView
        android:id="@+id/mealTags"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/mealYoutube"
        android:layout_alignStart="@+id/mealArea"
        android:layout_marginBottom="12dp"
        android:text="TextView"
        android:textColor="#999999"
        android:textSize="10sp"
        tools:fontFamily="@font/nunito" />

    <EditText
        android:id="@+id/mealInstructions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/mealIngredients"
        android:layout_below="@+id/mealIngredients"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:fontFamily="@font/nunito"
        android:inputType="textPersonName"
        android:text="Name"
        android:textColor="#999999"
        android:textSize="12sp" />

    <EditText
        android:id="@+id/mealIngredients"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/mealImage"
        android:layout_below="@+id/mealImage"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:fontFamily="@font/nunito"
        android:inputType="textPersonName"
        android:text="Name"
        android:textColor="#999999"
        android:textSize="12sp" />

</RelativeLayout>